<PageTitle>Products</PageTitle>

<MudGrid>
    <!-- Left Sidebar -->
    <MudItem xs="12" sm="3">
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h6">Categories</MudText>
            <MudTreeView T="Category" Items="@TreeCategories" OpenAll="true">
   
</MudTreeView>
        </MudPaper>
    </MudItem>

    <!-- Main Content -->
    <MudItem xs="12" sm="9">
        @foreach (var group in ProductGroups)
        {
            <MudText Typo="Typo.h5" Class="mb-2">@group.GroupName</MudText>
        <MudCarousel TData="object">
                @foreach (var product in group.Products)
                {
                    <MudCarouselItem>
                        <MudCard Style="width: 200px; margin: 10px;">
                            <MudCardMedia Image="@product.ImageUrl" />
                            <MudCardContent>
                                <MudText Typo="Typo.subtitle1">@product.Name</MudText>
                            </MudCardContent>
                            <MudCardActions>
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="@product.DatasheetUrl" Target="_blank">Datasheet</MudButton>
                                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="@product.ManualUrl" Target="_blank">Manual</MudButton>
                            </MudCardActions>
                        </MudCard>
                    </MudCarouselItem>
                }
            </MudCarousel>
        }
    </MudItem>
</MudGrid>

