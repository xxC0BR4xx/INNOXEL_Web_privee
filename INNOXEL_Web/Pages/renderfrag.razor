@page "/renderfrag"



<iframe src="https://zidatech.freshdesk.com/support/home"
        style="width: 100%; height: 600px; border: none;"
        title="Embedded Support Website">
</iframe>

@code {
    // 1. Declare the RenderFragment property
    public RenderFragment WebsiteContent { get; set; }

    // 2. Initialize the RenderFragment with the desired HTML (the iframe)
    protected override void OnInitialized()
    {
        WebsiteContent = (__builder) =>
        {
            <text>
                <iframe src="https://zidatech.freshdesk.com/support/home"
                        style="width: 100%; height: 600px; border: 1px solid #ccc;"
                        title="Embedded Support Website">
                </iframe>
            </text>
        };
    }
}